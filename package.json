{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run build.tsx",
    "lint": "lerna run lint --stream",
    "lint:fix": "lerna run lint --stream -- --fix",
    "size": "lerna run size --stream",
    "changed": "lerna changed",
    "version": "lerna version --conventional-commits --exact --yes",
    "publish": "yarn lerna:changed && yarn lerna:version && lerna publish from-git --no-verify-access --yes"
  },
  "devDependencies": {
    "bun-types": "1.0.1",
    "lerna": "7.2.0"
  }
}
